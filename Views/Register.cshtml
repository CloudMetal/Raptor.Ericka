@Html.ValidationSummary(T("Account creation was unsuccessful. Please correct the errors and try again.").ToString(), new { @class = "text-error" })
<div class="logreg">
    <div class="row">
        <div class="span12">
            <div class="logreg-page">
                <h3>Register with <span class="color">Philip Senechal</span></h3>
                <hr />
                <div class="form">
                    <!-- Register form (not working)-->
                    @using (Html.BeginFormAntiForgeryPost(Url.Action("Register"), FormMethod.Post, new { @class = "form-horizontal" })) {
                        <!-- Username -->
                        <div class="control-group">
                            <label class="control-label" for="username">Username</label>
                            <div class="controls">
                                @Html.TextBox("username", string.Empty, new { @class = "input-large" })
                            </div>
                        </div>
                        <!-- Email -->
                        <div class="control-group">
                            <label class="control-label" for="email">Email</label>
                            <div class="controls">
                                @Html.TextBox("email", string.Empty, new { @class = "input-large" })
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="control-group">
                            <label class="control-label" for="email">Password</label>
                            <div class="controls">
                                @Html.Password("password", string.Empty, new { @class = "input-large" })
                            </div>
                        </div>
                        <!-- Password Confirm -->
                        <div class="control-group">
                            <label class="control-label" for="confirmpassword">Confirm new Password</label>
                            <div class="controls">
                                @Html.Password("confirmpassword", string.Empty, new { @class = "input-large" })
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="form-actions">
                            <!-- Buttons -->
                            <button type="submit" class="btn">Register</button>
                            <button type="reset" class="btn">Reset</button>
                        </div>
                    }
                    <hr />
                    <div class="lregister">
                        Already have account with us? @Html.ActionLink(T("Login").ToString(), "LogOn", new { Controller = "Account", Area = "Orchard.Users", ReturnUrl = (Request.QueryString["ReturnUrl"] ?? Request.RawUrl) }, new { rel = "nofollow" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>