@using Vandelay.Industries.Models
@{
    int i = 0;
}
<ul class="tagcloud">
@foreach (TagCount tagCount in Model.TagCounts) {
    if (i < 5) {
        <li class="tagCloud-tag tagCloud-@tagCount.Bucket">
            @Html.ActionLink(tagCount.TagName, "Search", "Home", new {
                    area = "Orchard.Tags",
                    tagName = tagCount.TagName
                }, null
            )
        </li>
    }
    
    i++;
}
</ul>