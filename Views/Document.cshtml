@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;
@{
    RegisterLink(new LinkEntry { Type = "image/x-icon", Rel = "shortcut icon", Href = Url.Content("~/modules/orchard.themes/Content/orchard.ico") });

    Style.Include("http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic");
    Style.Include("http://fonts.googleapis.com/css?family=Oswald:400,700");

    Style.Include("bootstrap.min.css");
    Style.Include("font-awesome.min.css");
    Style.Include("font-awesome-ie7.min.css").UseCondition("eq IE 7");
    Style.Include("style.css");
    Style.Include("blue.css");
    Style.Include("theme.css");
    Style.Include("bootstrap-responsive.min.css");

    Script.Require("jQuery").AtHead();
    Script.Include("bootstrap.min.js");
    Script.Include("custom.js");
    Script.Include("html5shim.js").UseCondition("lt IE 9").AtHead();

    string title = Convert.ToString(Model.Title);
    string siteName = Convert.ToString(WorkContext.CurrentSite.SiteName);

    string classForPage = "static " + Html.ClassForPage();
}
<!DOCTYPE html>
<html lang="en">
<!--[if lt IE7]>
    <html lang="@WorkContext.CurrentCulture" class="@classForPage no-js lt-ie9 lt-ie8 lt-ie7">
<![endif]-->
<!--[if IE7]>
    <html lang="@WorkContext.CurrentCulture" class="@classForPage no-js lt-ie9 lt-ie8">
<![endif]-->
<!--[if IE8]>
    <html lang="@WorkContext.CurrentCulture" class="@classForPage no-js lt-ie9">
<![endif]-->
<!--[if gt IE8]>
    <html lang="@WorkContext.CurrentCulture" class="@classForPage no-js">
<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>@Html.Title(title, siteName)</title>
    @Display(Model.Head)
    <script>(function (d) { d.className = "dyn" + d.className.substring(6, d.className.length); })(document.documentElement);</script>
</head>
<body>
    <!--[if lt IE7]>
    <p class="chromeframe">@T("You are using an outdated browser"). @Html.Link(T("Upgrade your browser today"), "http://browsehappy.com/")
        @T("or") @Html.Link(T("install Google Chrome Frame"), "http://www.google.com/chromeframe/?redirect=true") @T("to better experience this site").</p>
    <![endif]-->
    @* Layout (template) is in the Body zone @ the default position (nothing, zero, zilch) *@
    @Display(Model.Body)
    @Display(Model.Tail)
</body>
</html>